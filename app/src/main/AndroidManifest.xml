<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.denale.podcastlistener">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name="ru.denale.podcastlistener.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayerOnline"
        android:usesCleartextTraffic="true">

        <service
            android:name=".feature.activities.playmusic.MusicPlayerService2"
            android:foregroundServiceType="mediaPlayback"
            android:exported="true">
            <intent-filter>
                <action android:name="androidx.media3.session.MediaSessionService"/>
            </intent-filter>
        </service>

        <service
            android:name=".services.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_baseline_monetization_on_24" />

        <activity
            android:name="ru.denale.podcastlistener.feature.authors.AuthorsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.denale.podcastlistener.feature.category.CategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="ru.denale.podcastlistener.feature.activities.musics.MusicsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ru.denale.podcastlistener.feature.activities.playmusic.PlayMusic2"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Define your deep link URL here -->
                <data
                    android:host="@string/deeplink_path"
                    android:pathPrefix="@string/deeplink_podcast_path"
                    android:scheme="@string/deeplink_scheme" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="dasuccess.ru"
                    android:pathPattern="/podcast"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <activity
            android:name="ru.denale.podcastlistener.feature.home.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>