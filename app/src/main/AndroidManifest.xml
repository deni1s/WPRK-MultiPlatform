<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ge.denale.podcastlistener">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="ge.denale.podcastlistener.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayerOnline"
        android:usesCleartextTraffic="true">
        <activity android:name="ge.denale.podcastlistener.feature.authors.AuthorsActivity"/>
        <activity android:name="ge.denale.podcastlistener.feature.category.CategoryActivity"/>
        <activity android:name="ge.denale.podcastlistener.feature.activities.musics.MusicsActivity" />
        <activity android:name="ge.denale.podcastlistener.feature.activities.playmusic.PlayMusic"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Define your deep link URL here -->
                <data
                    android:scheme="@string/deeplink_scheme"
                    android:host="@string/deeplink_path"
                    android:pathPrefix="@string/deeplink_podcast_path" />
            </intent-filter>
        </activity>
        <activity android:name="ge.denale.podcastlistener.feature.advertisment.InterstitialAdActivity"/>
        <activity android:name="ge.denale.podcastlistener.feature.home.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>