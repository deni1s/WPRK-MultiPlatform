<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    android:orientation="vertical"
    tools:context=".feature.activities.playmusic.PlayMusic1">

    <ImageView
        android:id="@+id/img_back_playMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPlayerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?textAppearanceHeadline6"
        app:layout_constraintEnd_toStartOf="@+id/img_share_podcast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_back_playMusic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_share_podcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_share_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/player_adv_banner"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:minHeight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlayerTitle"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cover_music"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/default_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_singer_music"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/player_adv_banner" />

    <TextView
        android:id="@+id/tv_singer_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?textAppearanceHeadline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_name_music"
        android:layout_marginBottom="8dp"
        tools:text="Selfish Love 31231231233213123123Dj Snake" />

    <TextView
        android:id="@+id/tv_name_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="16dp"
        android:textAppearance="?textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/player_screen_warning"
        tools:text="Dj Snake" />

    <TextView
        android:id="@+id/player_screen_warning"
        android:layout_width="match_parent"
        android:paddingHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/control_panel"
        android:textColor="@color/white"
        android:textAppearance="?textAppearanceCaption"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_play_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="100"
            app:haloColor="@color/yellow"
            app:labelBehavior="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:thumbColor="@color/yellow"
            app:trackColorActive="@color/yellow"
            app:trackColorInactive="@color/black4" />

        <TextView
            android:id="@+id/tv_time_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:textAppearance="@style/TextAppearance.MyTheme.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/slider"
            tools:text="35:17" />

        <TextView
            android:id="@+id/tv_time_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="40dp"
            android:text="@string/start_time"
            android:textAppearance="@style/TextAppearance.MyTheme.Caption"
            app:layout_constraintEnd_toStartOf="@+id/tv_time_music"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/slider" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_skip_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            app:backgroundTint="@color/black3"
            app:layout_constraintBottom_toBottomOf="@id/PlayProgress"
            app:layout_constraintRight_toLeftOf="@id/PlayProgress"
            app:layout_constraintTop_toTopOf="@id/PlayProgress"
            app:srcCompat="@drawable/ic_baseline_skip_previous_24" />

        <com.github.jorgecastilloprz.FABProgressCircle
            android:id="@+id/PlayProgress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="32dp"
            app:arcColor="@color/yellow"
            app:circleSize="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/slider">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_play_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/black3"
                app:srcCompat="@drawable/ic_play" />

        </com.github.jorgecastilloprz.FABProgressCircle>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_skip_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            app:backgroundTint="@color/black3"
            app:layout_constraintBottom_toBottomOf="@id/PlayProgress"
            app:layout_constraintLeft_toRightOf="@id/PlayProgress"
            app:layout_constraintTop_toTopOf="@id/PlayProgress"
            app:srcCompat="@drawable/ic_baseline_skip_next_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>