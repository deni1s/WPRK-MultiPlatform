<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/img_music"
        android:layout_width="70dp"
        tools:src="@drawable/default_image"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:paddingEnd="8dp"
        android:textAppearance="?textAppearanceBody1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_music"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Turn Down For What" />

    <TextView
        android:id="@+id/singer_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintEnd_toStartOf="@id/time_music"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/img_music"
        app:layout_constraintTop_toBottomOf="@+id/title_music"
        app:layout_constraintWidth_default="wrap"
        tools:text="Dj Snake" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/time_music"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:drawablePadding="4dp"
        android:textAppearance="?textAppearanceBody2"
        app:drawableStartCompat="@drawable/ic_iconly_light_time_circle"
        app:layout_constraintBottom_toBottomOf="@+id/singer_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/singer_music"
        app:layout_constraintTop_toBottomOf="@+id/title_music"
        app:layout_constraintTop_toTopOf="@+id/singer_music"
        app:layout_constraintWidth_default="wrap"
        tools:text="08:12" />
</androidx.constraintlayout.widget.ConstraintLayout>