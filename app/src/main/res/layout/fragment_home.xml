<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary">

    <LinearLayout
        android:id="@+id/main_loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/main_loadingview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="Ваша ежедневная волна собирается..."
            android:textAppearance="?textAppearanceHeadline6" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/app_name"
                android:textAppearance="?textAppearanceHeadline4"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/topBannerSliderViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp" />

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/topBannerIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:dotsColor="#E0DCDC"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="10dp"
                    app:dotsSpacing="3dp"
                    app:dotsWidthFactor="4"
                    app:progressMode="false" />

            </FrameLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/popular_background" />

            <FrameLayout
                android:id="@+id/frame_all_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/genres"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:textColor="@color/yellow" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_all_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="@string/see_all"
                    android:textAppearance="?textAppearanceHeadline6" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/popular_background" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.yandex.mobile.ads.banner.BannerAdView
                android:id="@+id/main_screen_top_adv_banner"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:minHeight="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/main_screen_top_adv_banner_fail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
                android:visibility="gone"
                android:text="Я знаю, что мир полон возможностей, и я нахожу их с легкостью."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/main_screen_top_adv_banner"
                app:layout_constraintBottom_toBottomOf="@id/main_screen_top_adv_banner" />

            <ProgressBar
                android:id="@+id/main_screen_top_adv_banner_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="8dp"
                android:progressTint="@color/yellow"
                android:layout_gravity="center"
                android:indeterminateTint="@color/yellow"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/popular_background" />

            <FrameLayout
                android:id="@+id/frame_all_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/authors"
                    android:textAppearance="?textAppearanceHeadline6"
                    android:textColor="@color/yellow" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_all_authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="@string/see_all"
                    android:textAppearance="?textAppearanceHeadline6" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/popular_background" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_authors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/home_screen_authors_warning"
                android:layout_width="match_parent"
                android:autoLink="web"
                android:visibility="gone"
                android:paddingHorizontal="12dp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"
                android:textAppearance="?textAppearanceCaption"
                android:layout_height="wrap_content"/>

            <com.yandex.mobile.ads.banner.BannerAdView
                android:id="@+id/main_screen_bottom_adv_banner"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/main_screen_bottom_adv_banner_fail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
                android:visibility="gone"
                android:text="Я знаю, что мир полон возможностей, и я нахожу их с легкостью."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/main_screen_bottom_adv_banner"
                app:layout_constraintBottom_toBottomOf="@id/main_screen_bottom_adv_banner" />

            <ProgressBar
                android:id="@+id/main_screen_bottom_adv_banner_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:progressTint="@color/yellow"
                android:indeterminateTint="@color/yellow"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/main_screen_bottom_slider"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/bottomBannerSliderViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                    android:id="@+id/bottomBannerIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"
                    app:dotsColor="#E0DCDC"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="10dp"
                    app:dotsSpacing="3dp"
                    app:dotsWidthFactor="4"
                    app:progressMode="false" />

            </FrameLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>